<h3>Welcome {{user}}</h3>
<h5>Enjoy your stories!</h5>

{{#if stories}}
    <div class="row">
        {{#each stories}}
        <div class="col s12 m4">
            <div class="card amber lighten-5">
                <div class="card-content black-text">
                    <span class="new badge" data-badge-caption="">{{status}}</span>
                    <a href="/stories/{{_id}}"><p class="card-title">{{title}}</p></a>
                    <p><small>{{formatDate createdAt 'MMMM Do YYYY, h:m:ss a'}}</small></p>
                    <p>{{stripTags ( truncate body 100)}}</p>
                </div>
                <div class="card-action">
                    <a href="/stories/edit/{{_id}}" class="waves-effect waves-light btn btn-float">
                        <i class="fas fa-edit"></i>
                        Edit
                    </a>
                    <form action="/stories/{{_id}}" method="POST" id="delete-form">
                        <input type="hidden" name="_method" value="DELETE">
                        <button type="submit" class="waves-effect waves-light btn red">
                            <i class="fas fa-trash"></i>
                            Delete
                        </button>
                    </form>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
{{else}}
    <p>Sorry, no stories yet!</p>
{{/if}}