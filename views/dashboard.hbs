<h3>Welcome {{user}}</h3>
<h5>Enjoy your stories!</h5>

{{#if stories}}
    {{#each stories}}
    <div class="row">
        <div class="col s12 m6">
            <div class="card blue-grey darken-1">
                <div class="card-content white-text">
                    <span class="new badge" data-badge-caption="">{{status}}</span>
                    <a href="/stories/{{_id}}"><p class="card-title">{{title}}</p></a>
                    <p><small>{{formatDate createdAt 'MMMM Do YYYY, h:m:ss a'}}</small></p>
                    <p>Check out this story!</p>
                </div>
                <div class="card-action">
                    <a href="#">Edit</a>
                    <a href="#">Delete</a>
                </div>
            </div>
        </div>
    </div>
    {{/each}}
{{else}}
    <p>Sorry, no stories yet!</p>
{{/if}}